---
import '../styles/global.css';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
import Search from '../components/ui/Search.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Bakti Satria Adhityatama Adhityatama',
  description = 'Personal blog and technical documentation for cybersecurity professionals',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/logo_blog.png" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-slate-950 text-slate-100 light:bg-slate-50 light:text-slate-900">
    <header class="sticky top-0 z-50 w-full border-b border-slate-800 light:border-slate-200 bg-slate-950/80 light:bg-white/80 backdrop-blur">
      <div class="container mx-auto px-4 h-16 flex items-center justify-between">
        <div class="flex items-center gap-8">
          <a href="/" class="flex items-center gap-2 group">
            <img src="/logo_blog.png" alt="Logo" class="h-8 w-auto" />
            <span class="font-bold text-slate-100 light:text-slate-900 group-hover:text-cyan-400 light:group-hover:text-cyan-600 transition-colors">
              Bakti Satria Adhityatama
            </span>
          </a>
          <nav class="hidden md:flex items-center gap-6">
            <a
              href="/docs"
              class="text-sm text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
            >
              Docs
            </a>
            <a
              href="/blog"
              class="text-sm text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
            >
              Blog
            </a>
            <a
              href="/projects"
              class="text-sm text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
            >
              Projects
            </a>
            <a
              href="/about"
              class="text-sm text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
            >
              About
            </a>
            <a
              href="/tags"
              class="text-sm text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
            >
              Tags
            </a>
          </nav>
        </div>
        <div class="flex items-center gap-4">
          <div class="hidden sm:block w-48">
            <Search />
          </div>
          <ThemeToggle />
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-slate-800 light:border-slate-200">
        <nav class="container mx-auto px-4 py-4 flex flex-col gap-4">
          <a
            href="/docs"
            class="text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
          >
            Docs
          </a>
          <a
            href="/blog"
            class="text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
          >
            Blog
          </a>
          <a
            href="/projects"
            class="text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
          >
            Projects
          </a>
          <a
            href="/about"
            class="text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
          >
            About
          </a>
          <a
            href="/tags"
            class="text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
          >
            Tags
          </a>
          <div class="sm:hidden pt-4 border-t border-slate-800 light:border-slate-200">
            <Search />
          </div>
        </nav>
      </div>
    </header>

    <main class="flex-1 container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="border-t border-slate-800 light:border-slate-200 py-8 mt-auto">
      <div class="container mx-auto px-4 text-center text-sm text-slate-500 light:text-slate-600">
        <p>&copy; {new Date().getFullYear()} Bakti Satria Adhityatama, vibecoded with ❤️. All rights reserved.</p>
      </div>
    </footer>

    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');

        // Initialize any search inputs that become visible
        setTimeout(() => {
          const searchInputs = mobileMenu?.querySelectorAll('.search-input:not([data-initialized])');
          searchInputs?.forEach((searchInput) => {
            searchInput.setAttribute('data-initialized', 'true');
            searchInput.addEventListener('keypress', function(e) {
              if (e.key === 'Enter') {
                const query = searchInput.value.trim();
                if (query) {
                  window.location.href = '/search?q=' + encodeURIComponent(query);
                }
              }
            });
          });
        }, 50);
      });
    </script>

    <script>
      function initCopyButtons() {
        document.querySelectorAll('pre:not([data-copy-init])').forEach((pre) => {
          pre.setAttribute('data-copy-init', 'true');
          pre.style.position = 'relative';

          const button = document.createElement('button');
          button.className = 'copy-code-btn';
          button.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>`;
          button.title = 'Copy code';

          button.addEventListener('click', async () => {
            const code = pre.querySelector('code')?.textContent || pre.textContent || '';
            try {
              await navigator.clipboard.writeText(code);
              button.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
              button.classList.add('copied');
              setTimeout(() => {
                button.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>`;
                button.classList.remove('copied');
              }, 2000);
            } catch (err) {
              console.error('Failed to copy:', err);
            }
          });

          pre.appendChild(button);
        });
      }

      document.addEventListener('DOMContentLoaded', initCopyButtons);
      document.addEventListener('astro:page-load', initCopyButtons);
    </script>

    <style is:global>
      .copy-code-btn {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
        padding: 0.5rem;
        border-radius: 0.375rem;
        background: rgb(30 41 59 / 0.8);
        border: 1px solid rgb(51 65 85);
        color: rgb(148 163 184);
        cursor: pointer;
        opacity: 0;
        transition: opacity 0.2s, color 0.2s, background 0.2s;
      }

      pre:hover .copy-code-btn {
        opacity: 1;
      }

      .copy-code-btn:hover {
        color: rgb(34 211 238);
        background: rgb(30 41 59);
      }

      .copy-code-btn.copied {
        color: rgb(52 211 153);
      }

      html.light .copy-code-btn {
        background: rgb(241 245 249 / 0.8);
        border-color: rgb(226 232 240);
        color: rgb(100 116 139);
      }

      html.light .copy-code-btn:hover {
        color: rgb(8 145 178);
        background: rgb(241 245 249);
      }

      html.light .copy-code-btn.copied {
        color: rgb(16 185 129);
      }
    </style>
  </body>
</html>
