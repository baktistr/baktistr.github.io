---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/ui/Badge.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { Content } = await project.render();

const statusColors = {
  active: 'bg-emerald-500/20 text-emerald-400 light:text-emerald-600 border-emerald-500/30',
  completed: 'bg-cyan-400/20 text-cyan-400 light:text-cyan-600 border-cyan-400/30',
  archived: 'bg-slate-500/20 text-slate-400 light:text-slate-500 border-slate-500/30',
};

const statusLabels = {
  active: 'Actively Maintained',
  completed: 'Completed',
  archived: 'Archived',
};
---

<BaseLayout title={project.data.title} description={project.data.description}>
  <article class="max-w-4xl mx-auto">
    <header class="mb-8">
      <nav class="mb-6">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 text-sm text-slate-400 light:text-slate-600 hover:text-cyan-400 light:hover:text-cyan-600 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Projects
        </a>
      </nav>

      <div class="flex items-start justify-between gap-4 mb-4">
        <h1 class="text-3xl md:text-4xl font-bold text-slate-100 light:text-slate-900">
          {project.data.title}
        </h1>
        <span class={`text-sm px-3 py-1 rounded border ${statusColors[project.data.status]}`}>
          {statusLabels[project.data.status]}
        </span>
      </div>

      <p class="text-lg text-slate-400 light:text-slate-600 mb-6">
        {project.data.description}
      </p>

      <div class="flex flex-wrap items-center gap-4 mb-6">
        {project.data.github && (
          <a
            href={project.data.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800 light:bg-slate-200 text-slate-100 light:text-slate-900 hover:bg-slate-700 light:hover:bg-slate-300 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </a>
        )}
        {project.data.url && (
          <a
            href={project.data.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-cyan-400 light:bg-cyan-600 text-slate-900 light:text-white hover:bg-cyan-500 light:hover:bg-cyan-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Live Demo
          </a>
        )}
      </div>

      <div class="flex flex-wrap gap-2">
        {project.data.tags.map((tag) => (
          <Badge>{tag}</Badge>
        ))}
      </div>
    </header>

    <div class="prose prose-invert light:prose prose-slate max-w-none prose-headings:text-slate-100 light:prose-headings:text-slate-900 prose-a:text-cyan-400 light:prose-a:text-cyan-600 prose-code:text-cyan-400 light:prose-code:text-cyan-600 prose-pre:bg-slate-800 light:prose-pre:bg-slate-100">
      <Content />
    </div>
  </article>
</BaseLayout>
