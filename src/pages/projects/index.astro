---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Badge from '../../components/ui/Badge.astro';

const projects = await getCollection('projects');
const publishedProjects = projects.filter((project) => !project.data.draft);

// Sort: featured first, then by status (active > completed > archived)
const statusOrder = { active: 0, completed: 1, archived: 2 };
const sortedProjects = publishedProjects.sort((a, b) => {
  if (a.data.featured !== b.data.featured) {
    return a.data.featured ? -1 : 1;
  }
  return statusOrder[a.data.status] - statusOrder[b.data.status];
});

const statusColors = {
  active: 'bg-emerald-500/20 text-emerald-400 light:text-emerald-600',
  completed: 'bg-cyan-400/20 text-cyan-400 light:text-cyan-600',
  archived: 'bg-slate-500/20 text-slate-400 light:text-slate-500',
};
---

<BaseLayout title="Projects" description="Personal projects and tools I've built">
  <div class="max-w-6xl mx-auto">
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-slate-100 light:text-slate-900 mb-4">
        Projects
      </h1>
      <p class="text-lg text-slate-400 light:text-slate-600 max-w-2xl">
        A collection of tools, scripts, and applications I've built for cybersecurity, automation, and learning.
      </p>
    </header>

    {sortedProjects.length > 0 ? (
      <div class="grid gap-6 md:grid-cols-2">
        {sortedProjects.map((project) => (
          <a
            href={`/projects/${project.slug}`}
            class="group block p-6 rounded-lg bg-slate-900 light:bg-white border border-slate-800 light:border-slate-200 hover:border-cyan-400 light:hover:border-cyan-600 transition-colors"
          >
            <div class="flex items-start justify-between gap-4 mb-3">
              <h2 class="text-xl font-semibold text-slate-100 light:text-slate-900 group-hover:text-cyan-400 light:group-hover:text-cyan-600 transition-colors">
                {project.data.title}
              </h2>
              <div class="flex items-center gap-2 shrink-0">
                {project.data.featured && (
                  <span class="text-xs px-2 py-0.5 rounded bg-amber-500/20 text-amber-400 light:text-amber-600">
                    Featured
                  </span>
                )}
                <span class={`text-xs px-2 py-0.5 rounded capitalize ${statusColors[project.data.status]}`}>
                  {project.data.status}
                </span>
              </div>
            </div>

            <p class="text-slate-400 light:text-slate-600 mb-4 line-clamp-2">
              {project.data.description}
            </p>

            <div class="flex items-center justify-between">
              <div class="flex flex-wrap gap-2">
                {project.data.tags.slice(0, 3).map((tag) => (
                  <Badge>{tag}</Badge>
                ))}
                {project.data.tags.length > 3 && (
                  <span class="text-xs text-slate-500 light:text-slate-400">
                    +{project.data.tags.length - 3} more
                  </span>
                )}
              </div>

              <div class="flex items-center gap-3">
                {project.data.github && (
                  <svg class="w-5 h-5 text-slate-500 light:text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                )}
                {project.data.url && (
                  <svg class="w-5 h-5 text-slate-500 light:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="bg-slate-900/50 light:bg-white border border-slate-800 light:border-slate-200 rounded-lg p-8 text-center">
        <p class="text-slate-400 light:text-slate-600">No projects yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
