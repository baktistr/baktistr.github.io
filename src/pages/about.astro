---
import BaseLayout from '../layouts/BaseLayout.astro';
import Badge from '../components/ui/Badge.astro';

const skills = {
  'Penetration Testing': ['Web Application Security', 'Network Penetration Testing', 'Active Directory Attacks', 'Vulnerability Assessment'],
  'Tools & Technologies': ['Burp Suite', 'Nmap', 'Metasploit', 'Wireshark', 'Bloodhound', 'Cobalt Strike'],
  'Programming': ['Python', 'Bash', 'PowerShell', 'JavaScript', 'Go'],
  'Platforms': ['Linux', 'Windows Server', 'Docker', 'AWS', 'Azure'],
};

const certifications = [
  { name: 'OSCP', full: 'Offensive Security Certified Professional', year: '2024' },
  { name: 'CEH', full: 'Certified Ethical Hacker', year: '2023' },
  { name: 'CompTIA Security+', full: 'CompTIA Security+', year: '2022' },
];
---

<BaseLayout title="About" description="Learn more about my cybersecurity journey and expertise">
  <div class="max-w-4xl mx-auto">
    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-slate-100 light:text-slate-900 mb-4">
        About Me
      </h1>
    </header>

    <!-- Bio Section -->
    <section class="mb-12">
      <div class="flex flex-col md:flex-row gap-8 items-start">
        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-cyan-400 to-emerald-500 flex items-center justify-center text-4xl font-bold text-slate-900 shrink-0">
          BS
        </div>
        <div>
          <h2 class="text-2xl font-semibold text-slate-100 light:text-slate-900 mb-4">
            Cybersecurity Professional
          </h2>
          <div class="prose prose-invert light:prose prose-slate max-w-none text-slate-300 light:text-slate-600">
            <p>
              I'm a passionate cybersecurity professional with a focus on offensive security and penetration testing.
              My journey in security started with curiosity about how systems work and evolved into a career dedicated
              to helping organizations identify and fix vulnerabilities before malicious actors can exploit them.
            </p>
            <p>
              When I'm not breaking into systems (legally), I enjoy participating in CTF competitions, contributing
              to open-source security tools, and sharing knowledge through this blog. I believe in continuous learning
              and staying updated with the latest attack techniques and defense strategies.
            </p>
            <p>
              This site serves as both a personal knowledge base and a resource for others in the security community.
              Feel free to explore the documentation for technical guides and the blog for my thoughts and experiences.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-slate-100 light:text-slate-900 mb-6">
        Skills & Expertise
      </h2>
      <div class="grid gap-6 md:grid-cols-2">
        {Object.entries(skills).map(([category, items]) => (
          <div class="p-5 rounded-lg bg-slate-900 light:bg-white border border-slate-800 light:border-slate-200">
            <h3 class="font-medium text-slate-100 light:text-slate-900 mb-3">
              {category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {items.map((skill) => (
                <Badge>{skill}</Badge>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Certifications Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-slate-100 light:text-slate-900 mb-6">
        Certifications
      </h2>
      <div class="space-y-4">
        {certifications.map((cert) => (
          <div class="flex items-center justify-between p-4 rounded-lg bg-slate-900 light:bg-white border border-slate-800 light:border-slate-200">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 rounded-lg bg-cyan-400/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-cyan-400 light:text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              </div>
              <div>
                <span class="font-semibold text-slate-100 light:text-slate-900">{cert.name}</span>
                <p class="text-sm text-slate-400 light:text-slate-600">{cert.full}</p>
              </div>
            </div>
            <span class="text-sm text-slate-500 light:text-slate-400">{cert.year}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact Section -->
    <section>
      <h2 class="text-2xl font-semibold text-slate-100 light:text-slate-900 mb-6">
        Get in Touch
      </h2>
      <div class="p-6 rounded-lg bg-slate-900 light:bg-white border border-slate-800 light:border-slate-200">
        <p class="text-slate-400 light:text-slate-600 mb-6">
          Interested in collaboration, have questions, or just want to connect? Feel free to reach out through any of these channels.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="https://github.com/baktistr"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800 light:bg-slate-200 text-slate-100 light:text-slate-900 hover:bg-slate-700 light:hover:bg-slate-300 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
          <a
            href="https://linkedin.com/in/baktistr"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-slate-800 light:bg-slate-200 text-slate-100 light:text-slate-900 hover:bg-slate-700 light:hover:bg-slate-300 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a
            href="mailto:hello@example.com"
            class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-cyan-400 light:bg-cyan-600 text-slate-900 light:text-white hover:bg-cyan-500 light:hover:bg-cyan-700 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email
          </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
