---
type CalloutType = 'info' | 'warning' | 'danger' | 'success';

interface Props {
  type?: CalloutType;
  title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
  info: {
    border: 'border-cyan-400',
    bg: 'bg-cyan-400/10',
    icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  warning: {
    border: 'border-amber-500',
    bg: 'bg-amber-500/10',
    icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  },
  danger: {
    border: 'border-red-500',
    bg: 'bg-red-500/10',
    icon: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  success: {
    border: 'border-emerald-500',
    bg: 'bg-emerald-500/10',
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  },
};

const style = styles[type];
const defaultTitle = {
  info: 'Info',
  warning: 'Warning',
  danger: 'Danger',
  success: 'Success',
}[type];
---

<div class={`my-6 p-4 rounded-lg border-l-4 ${style.border} ${style.bg}`}>
  <div class="flex items-start gap-3">
    <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={style.icon} />
    </svg>
    <div class="flex-1">
      {title && <p class="font-semibold mb-1">{title}</p>}
      <slot />
    </div>
  </div>
</div>
