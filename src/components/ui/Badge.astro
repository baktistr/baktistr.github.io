---
interface Props {
  variant?: 'default' | 'success' | 'warning' | 'danger';
  size?: 'sm' | 'md';
}

const { variant = 'default', size = 'md' } = Astro.props;

const styles = {
  default: 'bg-slate-800 light:bg-slate-100 text-slate-300 light:text-slate-700 border-slate-700 light:border-slate-200',
  success: 'bg-emerald-500/10 text-emerald-400 light:text-emerald-600 border-emerald-500/30',
  warning: 'bg-amber-500/10 text-amber-400 light:text-amber-600 border-amber-500/30',
  danger: 'bg-red-500/10 text-red-400 light:text-red-600 border-red-500/30',
};

const sizes = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-2.5 py-1 text-sm',
};
---

<span class={`badge inline-flex items-center rounded-full border ${styles[variant]} ${sizes[size]}`}>
  <slot />
</span>
